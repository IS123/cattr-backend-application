{
  "name": "cattr/backend-application",
  "description": "Backend Application for Cattr",
  "version": "4.0.0-RC1",
  "license": "SSPL-1.0",
  "type": "project",
  "require": {
    "php": "^8",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "doctrine/dbal": "^2.13",
    "erusev/parsedown": "^1.7",
    "fakerphp/faker": "^1.19",
    "flugger/laravel-responder": "dev-master",
    "fruitcake/laravel-cors": "^2.2",
    "cattr/laravel-mysql-spatial": "dev-master",
    "intervention/image": "^2.7",
    "joshbrw/laravel-module-installer": "^2.0",
    "laravel/framework": "^9.3",
    "laravel/sanctum": "^2.14",
    "laravel/octane": "^1.2",
    "laravel/telescope": "^4.8",
    "laravel/tinker": "^2.7",
    "maatwebsite/excel": "^3.1",
    "mpdf/mpdf": "^8.0",
    "nwidart/laravel-modules": "^9",
    "php-http/guzzle7-adapter": "^1.0",
    "predis/predis": "^1.1",
    "psr/simple-cache": "^1.0",
    "sentry/sentry-laravel": "^2.12",
    "webpatser/laravel-uuid": "^4.0",
    "wikimedia/composer-merge-plugin": "2.0.1",
    "mll-lab/graphql-php-scalars": "^5.4",
    "nuwave/lighthouse": "^5.42"
  },
  "require-dev": {
    "cattr/laravel-ide-helper": "dev-master",
    "mockery/mockery": "^1.5",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "sempro/phpunit-pretty-print": "^1.0",
    "squizlabs/php_codesniffer": "^3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Modules\\": "Modules/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeds/"
    }
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs --standard=./phpcs.xml --colors",
    "phpcbf": "vendor/bin/phpcbf --standard=./phpcs.xml --colors",
    "project:update": [
      "@composer update",
      "@php artisan migrate",
      "@config:update"
    ],
    "dumphelpers": [
      "@php artisan ide-helper:generate",
      "@php artisan ide-helper:meta"
    ],
    "config:init": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php artisan key:generate",
      "@config:update"
    ],
    "config:update": [
      "@php artisan package:discover"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "@config:update"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "@config:update"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "joshbrw/laravel-module-installer": true,
      "wikimedia/composer-merge-plugin": true
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ],
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/cattr-app/laravel-mysql-spatial.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/cattr-app/laravel-ide-helper.git"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "merge-plugin": {
      "include": [
        "./Modules/*/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    },
    "hooks": {
      "pre-commit": [
        "OUTPUT=$(vendor/bin/phpcbf --standard=./phpcs.xml)",
        "RETVAL=$?",
        "if [ $RETVAL -ne 0 ]; then",
        "echo $OUTPUT | less",
        "fi",
        "exit $RETVAL"
      ]
    }
  }
}
