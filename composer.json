{
    "name": "amazing-time/core-application",
    "description": "Core Application for AmazingTime tracker application",
    "keywords": [
        "amazingcat",
        "time tracking",
        "amazing",
        "cat"
    ],
    "license": "Beerware",
    "type": "project",
    "require": {
        "php": ">=7.1",
        "ext-pdo": "*",
        "appzcoder/crud-generator": "3.0.8",
        "barryvdh/laravel-ide-helper": "2.5.1",
        "fico7489/laravel-eloquent-join": "4.0.7",
        "fzaninotto/Faker": "^1.7",
        "intervention/image": "2.4.2",
        "kbsali/redmine-api": "1.5.16",
        "laravel/framework": "5.6.39",
        "laravel/tinker": "1.0.7",
        "nwidart/laravel-modules": "3.3.1",
        "paulvl/backup": "3.0.2",
        "tymon/jwt-auth": " 1.0.0-rc.2",
        "webpatser/laravel-uuid": "3.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "7.5.11",
        "doctrine/dbal": "2.9.2"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/"
        }
    },
    "scripts": {
        "project:update": [
            "@composer update",
	    "@php artisan migrate",
            "npm install",
            "npm run build",
            "@config:update"
        ],
        "config:init": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"if (!is_dir(__DIR__.'/public/uploads')) mkdir(__DIR__.'/public/uploads');\"",
            "@php -r \"if (!file_exists(__DIR__.'/public/uploads/screenshots')) symlink(__DIR__.'/storage/app/uploads/screenshots', __DIR__.'/public/uploads/screenshots');\"",
            "@php artisan key:generate",
            "@php artisan jwt:secret",
            "npm install",
            "npm run build",
            "@config:update"
        ],
        "config:update": [
            "@php artisan package:discover",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "@config:update"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@config:update"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ],
    "psr-4": {
      "Tests\\": "tests/"
    }
  }
}
